<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res"
             type="com.github.gwt.user.client.ui.resources.PagerResourcesImpl"/>

    <g:HorizontalPanel styleName="{res.pagerResources.style.pager}">

        <g:PushButton ui:field="backwards"
                styleName="{res.pagerResources.style.backwards}">
            &nbsp;&nbsp;‹&nbsp;&nbsp;
        </g:PushButton>

        <g:TextBox ui:field="center"
                   styleName="{res.pagerResources.style.display}"/>

        <g:PushButton ui:field="forwards"
                styleName="{res.pagerResources.style.forwards}">
            &nbsp;&nbsp;›&nbsp;&nbsp;
        </g:PushButton>

    </g:HorizontalPanel>

</ui:UiBinder>